{
	"compilerOptions": {
		"jsx": "react",
		"declaration": true,
		"module": "esnext",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"target": "es2022",
		"moduleResolution": "node",
		"composite": true,
		"allowSyntheticDefaultImports": true
	},
	"ts-node": {
		"esm": true,
		"experimentalSpecifierResolution": "node"
	}
}
